# このファイルをコピーして terraform.tfvars を作成し、
# 実際の値を設定してください

# ==========================================
# Proxmox 設定
# ==========================================

proxmox_token_id     = "terraform@pve!terraform"
proxmox_token_secret = "your_proxmox_api_secret_here"
proxmox_node         = "aduki"

# Proxmox terraform ユーザーの SSH 秘密鍵（multiline）
proxmox_ssh_private_key = <<-EOT
-----BEGIN RSA PRIVATE KEY-----
MIIEowIBAAKCAQEA...
...
-----END RSA PRIVATE KEY-----
EOT

# ==========================================
# SSH 公開鍵設定（youkan ユーザー用）
# ==========================================

# SSH 公開鍵の直接指定（GitHub Actions / ローカルで環境変数で指定）
ssh_public_key = "ssh-rsa AAAAB3NzaC1yc2E..."

# ==========================================
# VM ユーザー設定
# ==========================================

# Ubuntu user のパスワード（Cloud-init 用）
# 本番環境では SSH 認証のみを使用し、パスワード認証は無効化することを推奨
ubuntu_password = ""
