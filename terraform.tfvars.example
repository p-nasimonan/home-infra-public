# このファイルをコピーして terraform.tfvars を作成し、
# 実際の値を設定してください

# Cloudflare
cloudflare_api_token = "your_cloudflare_api_token_here"

# Proxmox
proxmox_token_id     = "terraform@pve!terraform"
proxmox_token_secret = "your_proxmox_api_secret_here"

# デフォルトのProxmoxノード
proxmox_node = "aduki"

# 公開するサービス
# services = {
#   "app1" = {
#     subdomain   = "app"
#     local_url   = "http://192.168.0.100:3000"
#     description = "My Application"
#   }
# }

# ==========================================
# Cloudflare Access 設定
# ==========================================

# 管理者として認証可能なメールアドレス
# 注: GitHub ユーザーの GitHub登録メール（username@github.com のような Noreply メール）も可能
admin_emails = [
  # "your-email@example.com"
]

# 信頼できるホームネットワークの IP
# （この IP からのアクセスはポリシーチェックをスキップ）
trusted_ips = [
  # "203.0.113.0/24",  # あなたのホームネット
  # "198.51.100.0/24"  # VPN/モバイル
]